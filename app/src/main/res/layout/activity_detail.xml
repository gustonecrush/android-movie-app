<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="50sp"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/jumbotron"
                android:layout_width="match_parent"
                android:layout_height="500sp"
                >

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="match_parent"
                    android:layout_height="500sp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/poster" />

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:background="@drawable/gradient_detail_poster"
                    >

                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="30sp"
                    android:src="@drawable/ic_back_btn"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Witcher 2021"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/mov_black"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sci-Fiction"
                    android:layout_below="@id/tv_title"
                    android:textSize="15sp"
                    android:layout_marginTop="-5sp"
                    android:textColor="@color/mov_gray"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_centerHorizontal="true"
                    />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/rating_bar"
                    android:rating="2"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:max="5"
                    android:theme="@style/smallRatingBar"
                    android:layout_marginTop="-7sp"
                    android:layout_below="@id/tv_category"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:layout_below="@id/rating_bar"
                    android:id="@+id/btn_container"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/ic_play" />

                    <ImageView
                        android:layout_marginLeft="10sp"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/ic_favorite" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Cast"
                    android:textColor="@color/mov_black"
                    android:textSize="20dp"
                    android:paddingHorizontal="25sp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_cast"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="25sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>