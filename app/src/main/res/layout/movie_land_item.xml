<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="25sp"
    android:id="@+id/movie"
    android:layout_marginTop="10sp">

<!-- Movie Poster Backdrop -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_poster"
        android:layout_width="150sp"
        android:layout_height="250sp"
        android:src="@drawable/tm_movie_1"
        app:shapeAppearanceOverlay="@style/roundedPosterCard" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_backdrop"
        android:layout_width="350sp"
        android:layout_height="190sp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:src="@drawable/cs_backdrop_1"
        app:shapeAppearanceOverlay="@style/roundedImageCard" />


<!-- Movie Title -->
<TextView
    android:id="@+id/tv_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/poppins_semibold"
    android:text="A Quite Place II"
    android:textColor="@color/mov_black"
    android:textSize="20dp"
    android:layout_marginTop="10sp"
    />

<!-- Release Date Title -->
<TextView
    android:id="@+id/tv_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/poppins_medium"
    android:text="April 2021"
    android:textColor="@color/mov_gray"
    android:textSize="15dp"
    />

</LinearLayout>